<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvestorFragments.InvestorProfileFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/investor_profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/img1"
        />
    <TextView
        android:id="@+id/investor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/investor_profile_image"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Craig ray"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <Button
        android:layout_below="@id/investor_name"
        android:id="@+id/investor_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Request funding"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button_outer"
        />


</RelativeLayout>


</FrameLayout>